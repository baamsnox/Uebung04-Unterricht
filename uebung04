        netto=sc1.nextDouble(); 

        //Verarbeitung 
        mw=netto/100*19; 
        brutto=netto+mw; 

        //Ausgabe 
        System.out.println("Die Mehrwertsteuer betr채gt: "+mw); 
        System.out.println("Der Bruttobetrag lautet: "+brutto); 

        System.out.print("Wollen sie noch eine Berechnung durchf체hren? j oder n: "); 
        berechnung=sc1.next().charAt(0);

        //for-Schleife 
        for(netto=1;netto<=berechnung;) 
        { 
            //Eingabe 
            System.out.println("Geben Sie den Nettobetrag ein: "); 
            netto=sc1.nextDouble(); 

            //Verarbeitung 
            mw=netto/100*19; 
            brutto=netto+mw; 

            //Ausgabe 
            System.out.println("Die Mehrwertsteuer betr채gt: "+mw); 
            System.out.println("Der Bruttobetrag lautet: "+brutto); 

            System.out.print("Wollen sie noch eine Berechnung durchf체hren? j oder n: "); 
            berechnung=sc1.next().charAt(0);
            if(berechnung=='n')
            {
            }
        } 
  } 
} 
